{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules", 
    "azure/**/*", 
    "scripts/migrate-firebase-to-azure-config.ts",
    "scripts/database-migration.ts",
    "scripts/migrations/**/*",
    "scripts/migration/**/*",
    "scripts/deployment/**/*",
    "scripts/test-azure-foundry.ts",
    "scripts/test-*.ts"
  ]
}

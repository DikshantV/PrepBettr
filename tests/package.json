{
  "name": "prepbettr-headless-automation-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for headless browser automation and Azure Cosmos DB integration",
  "private": true,
  "scripts": {
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:verbose": "jest --config=jest.config.js --verbose",
    "test:headless-browser": "jest --config=jest.config.js headless-browser-automation.test.js",
    "test:azure-cosmos": "jest --config=jest.config.js azure-cosmos-integration.test.js",
    "test:integration": "jest --config=jest.config.js --testPathPattern='.*integration.*'",
    "test:unit": "jest --config=jest.config.js --testPathIgnorePatterns='.*integration.*'",
    "test:ci": "jest --config=jest.config.js --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --config=jest.config.js --runInBand",
    "coverage:open": "open tests/coverage/index.html",
    "coverage:report": "jest --config=jest.config.js --coverage --coverageReporters=text-summary",
    "lint:tests": "eslint tests/**/*.js",
    "clean": "rimraf tests/coverage tests/reports tests/tmp tests/screenshots",
    "setup": "npm run clean && mkdir -p tests/coverage tests/reports tests/tmp tests/screenshots"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.50.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "playwright": "^1.40.0",
    "@azure/cosmos": "^4.0.0",
    "@azure/identity": "^4.0.0",
    "@azure/storage-blob": "^12.17.0",
    "bottleneck": "^2.19.5"
  },
  "jest": {
    "preset": "./jest.config.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18"
          }
        }
      ]
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "testing",
    "headless-browser",
    "playwright",
    "azure-cosmos-db",
    "automation",
    "job-application",
    "integration-testing"
  ]
}
